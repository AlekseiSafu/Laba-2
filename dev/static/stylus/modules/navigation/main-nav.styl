.mobile-menu
    position fixed
    right -100%
    top 0
    z-index 100
    width 100%
    height 100%
    background-color #fff
    padding 65px 30px

    &__item
        margin-bottom 65px

    &__link
        font-size 34px
        font-weight bold
        color grayColor

        &.active, &:hover
            color blackColor

    &__exit-btn
        cursor pointer
        position absolute
        right 25px
        top 75px

        &__bar
            width 30px
            height 4px
            background-color grayColor
            position relative

            &:first-child
                transform: rotate(45deg)

            &:last-child
                transform: rotate(-45deg)
                position relative
                top -4px

    &__lang
        transform: rotate(90deg)
        position absolute
        right -15px
        bottom 100px

        &-choice
            color grayColor
            font-weight bold
            font-size 34px

            &.active
                color blackColor

            &::after
                content: '|'
                margin 0 5px
                font-weight bold
                color blackColor

            &:last-child
                &::after
                    display none
